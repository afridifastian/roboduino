<?xml version="1.0" encoding="UTF-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <stroke android:width="@dimen/border_width" android:color="@color/border_color" />
            <corners android:radius="@dimen/rounder_corner_radius" />
            <solid android:color="@color/black" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <stroke android:width="@dimen/border_width" android:color="@color/border_color" />
                <corners android:radius="@dimen/rounder_corner_radius" />
                <gradient android:startColor="#ffa4ceea" android:endColor="#ff1f98eb" android:angle="270.0" android:centerY="0.75" android:centerColor="#ff1f98eb" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <stroke android:width="@dimen/border_width" android:color="@color/border_color" />
                <corners android:radius="@dimen/rounder_corner_radius" />
                <gradient android:startColor="#ffa4ceea" android:endColor="#ff1f98eb" android:angle="270.0" android:centerY="0.75" android:centerColor="#ff1f98eb" />
            </shape>
        </clip>
    </item>
</layer-list>