<?xml version="1.0" encoding="UTF-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/menu_button_end" android:endColor="@color/menu_button_start" android:angle="270.0" />
            <stroke android:width="@dimen/border_width" android:color="@color/border_color" />
            <corners android:radius="@dimen/camera_button_corner_radius" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/custom_button_start" android:endColor="@color/theme" android:angle="270.0" />
            <stroke android:width="@dimen/border_width" android:color="@color/border_color" />
            <corners android:radius="@dimen/camera_button_corner_radius" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/camera_button_start" android:endColor="@color/camera_button_end" android:angle="270.0" />
            <stroke android:width="@dimen/border_width" android:color="@color/border_color" />
            <corners android:radius="@dimen/camera_button_corner_radius" />
        </shape>
    </item>
</selector>